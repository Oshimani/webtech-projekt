{% extends 'base.html.twig' %}

{% block title %}All the best poems!
{% endblock %}


{% block body %}

	{% block stylesheet %}
		<link rel="stylesheet" href="{{ asset('assets/css/poem-card.css')}}"/>
	{% endblock %}


	<h1>Poems</h1>

	<div
		class="">
		{# POEM ITERATOR #}
		{% for poem in poems %}
			<div class="card poem-card bg-light m-2">
				<div
					class="card-body">

					{# HEADING #}
					<h1 class="card-title mb-1 font-weight-lighter">{{poem.title}}</h1>

					{# METADATA #}
					<div class="font-weight-bold text-secondary border-bottom border-primary mb-2">
						<span>by
							{{poem.author}}</span>
						<span class="float-right">{{poem.created.format('d.m.Y')}}</span>
					</div>

					{# CONTENT #}
					<pre class="card-text">{{poem.content | slice(0, 100)}}...</pre>

					{# INTERACTION #}
					<div>
						{# OPEN #}
						<a title="Read poem" href="{{ path('poem_show', {'id': poem.id}) }}" class="btn btn-primary">
							<i class="bi bi-eye"></i>
						</a>
						{# EDIT #}
						<a title="Edit poem" href="{{ path('poem_edit', {'id': poem.id}) }}" class="btn btn-default">
							<i class="bi bi-pencil"></i>
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Author</th>
				<th>Content</th>
				<th>Praise</th>
				<th>Created</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for poem in poems %}
				<tr>
					<td>{{ poem.id }}</td>
					<td>{{ poem.author }}</td>
					<td>{{ poem.content }}</td>
					<td>{{ poem.praise }}</td>
					<td>{{ poem.created ? poem.created|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('poem_show', {'id': poem.id}) }}">show</a>
						<a href="{{ path('poem_edit', {'id': poem.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('poem_new') }}">Create new</a>
{% endblock %}
